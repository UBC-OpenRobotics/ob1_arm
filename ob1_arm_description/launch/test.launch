<launch>
<arg name="gui" default="False" />
<param name="robot_description" command="$(find xacro)/xacro '$(find ob1_arm_description)/urdf/mobile_base.xacro'" />
<param name="use_gui" value="$(arg gui)"/>
<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
<node name="rviz" pkg="rviz" type="rviz" args="-d $(find ob1_arm_description)/rviz/view_urdf.rviz" required="true" />
</launch>